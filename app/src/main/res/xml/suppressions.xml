<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Suppress common Android lint warnings -->
    <issue
        id="InvalidPackage"
        severity="ignore" />
    <issue
        id="UnusedResources"
        severity="ignore" />
    <issue
        id="UnusedIds"
        severity="ignore" />
    <issue
        id="ContentDescription"
        severity="ignore" />
    <issue
        id="HardcodedText"
        severity="ignore" />
    <issue
        id="SetTextI18n"
        severity="ignore" />
    <issue
        id="ViewConstructor"
        severity="ignore" />
    <issue
        id="StaticFieldLeak"
        severity="ignore" />
    <issue
        id="WrongThread"
        severity="ignore" />

    <!-- Suppress icon and resource warnings -->
    <issue
        id="IconMissingDensityFolder"
        severity="ignore" />
    <issue
        id="IconDensities"
        severity="ignore" />
    <issue
        id="IconLocation"
        severity="ignore" />
    <issue
        id="MissingApplicationIcon"
        severity="ignore" />

    <!-- Suppress dependency warnings -->
    <issue
        id="GradleDependency"
        severity="ignore" />
    <issue
        id="NewerVersionAvailable"
        severity="ignore" />
    <issue
        id="GradleOverrides"
        severity="ignore" />
    <issue
        id="ObsoleteLintCustomCheck"
        severity="ignore" />

    <!-- Suppress layout warnings -->
    <issue
        id="RtlHardcoded"
        severity="ignore" />
    <issue
        id="RtlSymmetry"
        severity="ignore" />
    <issue
        id="RelativeOverlap"
        severity="ignore" />
    <issue
        id="Overdraw"
        severity="ignore" />
    <issue
        id="UseAppTint"
        severity="ignore" />

    <!-- Suppress API warnings -->
    <issue
        id="OldTargetApi"
        severity="ignore" />
    <issue
        id="GoogleAppIndexingWarning"
        severity="ignore" />

    <!-- Suppress experimental warnings -->
    <issue
        id="ExperimentalAnnotationRetention"
        severity="ignore" />
    <issue
        id="UnsafeOptInUsageWarning"
        severity="ignore" />

    <!-- Suppress security warnings in debug builds -->
    <issue
        id="AllowBackup"
        severity="ignore" />
    <issue
        id="HardcodedDebugMode"
        severity="ignore" />

    <!-- Suppress performance warnings -->
    <issue
        id="UnusedQuantity"
        severity="ignore" />
    <issue
        id="DisableBaselineAlignment"
        severity="ignore" />
    <issue
        id="TooManyViews"
        severity="ignore" />
    <issue
        id="TooDeepLayout"
        severity="ignore" />

    <!-- Suppress accessibility warnings -->
    <issue
        id="ClickableViewAccessibility"
        severity="ignore" />
    <issue
        id="KeyboardInaccessibleWidget"
        severity="ignore" />
    <issue
        id="LabelFor"
        severity="ignore" />
</lint>